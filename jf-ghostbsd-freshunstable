pipeline {
    agent {
        label 'FreeBSD15'
    }
    stages {
        stage('Prep') {
            steps {
                echo "Prep ./ghostbsd-build repository folder..."
                sh 'rm -rf ghostbsd-build || true'
            }
        }
        stage('Clone') {
            steps {
                echo "Clone repository..."
                sh 'git clone https://github.com/ghostbsd/ghostbsd-build --depth=1 --branch=releng/14.3 || true'
            }
        }
        stage('MATE') {
            steps {
                sh 'cd ghostbsd-build && ./build.sh -d mate -b unstable'
            }
        }
        stage('XFCE') {
            steps {
                sh 'cd ghostbsd-build && ./build.sh -d xfce -b unstable'
            }
	    }
        stage('Gershwin') {
            steps {
                sh 'cd ghostbsd-build && ./build.sh -d gershwin -b unstable'
            }
        }
    }
}
