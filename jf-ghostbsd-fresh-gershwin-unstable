pipeline {
    agent any
    stages {
        stage('Prep') {
            steps {
                echo "Prep ./ghostbsd-build repository folder..."
                sh 'rm -rf ghostbsd-build || true'
            }
        }
        stage('Clone') {
            steps {
                echo "Clone repository..."
                sh 'git clone https://github.com/ghostbsd/ghostbsd-build --depth=1 --branch=gershwin || true'
            }
        }
        stage('gershwin') {
            steps {
                sh 'cd ghostbsd-build && ./build.sh -d gershwin -b unstable'
            }
        }
    }
}
