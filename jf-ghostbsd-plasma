pipeline {
    agent {
        label 'FreeBSD15'
    }
    stages {
        stage('Prep to Build') {
            steps {
                echo "Prep ./ghostbsd-build repository folder..."
                sh 'rm -rf ghostbsd-build || true'

                echo "Prep Jenkins/buildbsd-build working directory..."
                sh 'rm -rf /usr/jenkins/ghostbsd-build || true'

                echo "Clone experimental unstable branch..."
                sh 'git clone https://github.com/brianthehughes/ghostbsd-build --depth=1 --branch=fix'
            }
        }
        stage('KDE Plasma') {
            steps {
                sh 'cd ghostbsd-build && ./build.sh -d plasma -b unstable'
            }
        }
    }
}
